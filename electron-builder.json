{
    "productName": "App Outlet",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!screenshot/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json",
        "!release/"
    ],
    "linux": {
        "icon": "dist/app-outlet/assets/icon",
        "category": "Utility",
        "target": ["AppImage", "deb", "rpm", "tar.gz"]
    },
    "rpm": {
        "depends": ["libXtst6", "wget", "snapd", "flatpak"]
    },
    "deb": {
        "depends": ["wget", "snapd", "flatpak"]
    }
}
